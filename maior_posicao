Algoritmo "maior_posicao"

Var

   n, i, posicao : inteiro
   vet : vetor [0..10] de real
   maior : real

Inicio

      escreval("Quantos números você vai digitar? ")
      leia(n)
      
      para i de 0 ate n-1 faca
      
           escreval("Digite um número: ")
           leia(vet[i])
           
      fimpara
      
      para i de 0 ate n-1 faca
      
           se i = 0 entao
           
              maior <- vet[i]
              posicao <- i
              
           senao
                se maior < vet[i] entao
                
                   maior <- vet[i]
                   posicao <- i
                   
                fimse
           fimse
           
       fimpara
       
       escreval("MAIOR VALOR = ",maior:3:1)
       escreval("POSICAO DO MAIOR VALOR = ",posicao)




Fimalgoritmo