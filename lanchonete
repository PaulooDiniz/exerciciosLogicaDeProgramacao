Algoritmo "lanchonete"

Var

codigo, valor : real
quantidade : inteiro

Inicio

escreval("Codigo do produto comprado:")
leia(codigo)

se (codigo > 0) e (codigo < 6) entao
   escreval("Quantidade comprada: ")
   leia(quantidade)
fimse

escolha(codigo)
caso 1
     valor <- quantidade * 5.00
caso 2
     valor <- quantidade * 3.50
caso 3
     valor <- quantidade * 4.80
caso 4
     valor <- quantidade * 8.90
caso 5
     valor <- quantidade * 7.32
outrocaso
     escreval("CÓDIGO INVÁLIDO")
fimescolha

se (codigo > 0) e (codigo < 6) entao
   escreval("Valor a pagar: R$ ",valor:5:2)
fimse

Fimalgoritmo