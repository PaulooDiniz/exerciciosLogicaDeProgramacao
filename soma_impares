Algoritmo "soma_impares"

Var

x, y, soma, i : inteiro

Inicio

escreval("Digite dois n√∫meros: ")
leia(x)
leia(y)

soma <- 0
i <- 0

se x < y entao
   para i de x+1 ate y-1 faca
        se i % 2 <> 0 entao
           soma <- soma + i
        fimse
        i <- i + 1
   fimpara
senao
   para i de y+1 ate x-1 faca
      se i % 2 <> 0 entao
         soma <- soma + i
      fimse
      i <- i + 1
   fimpara
fimse

escreval("SOMA DOS IMPARES = ",soma)

Fimalgoritmo