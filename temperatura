Algoritmo "temperatura"

Var

fahrenheit, celsius : real
escolhido : caractere

Inicio

escreval("VocÃª vai digitar a temperatura em qual escala (F/C) ? ")
leia(escolhido)

se escolhido = "c" entao
   escreval("Digite a temperatura em Celsius: ")
   leia(celsius)
   
   fahrenheit <- celsius * 1.8 + 32
   
   escreval("Temperatura equivalente em Fahrenheit: ",fahrenheit:5:2)
   senao
        se escolhido = "f" entao
           escreval("Digite a temperatura em Fahrenheit: ")
           leia(fahrenheit)
           
           celsius <- (fahrenheit - 32) / 1.8
           
           escreval("Temperatura equivalente em Celsius: ",celsius:5:2)
        fimse
fimse

Fimalgoritmo