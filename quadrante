Algoritmo "quadrante"

Var

x, y, kind : inteiro

Inicio

repita

   escreval("Digite os valores das coordenadas X e Y:")
   leia(x)
   leia(y)
   
   se (x > 0) e (y > 0) entao
       kind <- 1
   senao
        se (x > 0) e (y < 0) entao
           kind <- 4
        senao
             se (x < 0) e (y > 0) entao
                kind <- 2
             senao
                  se(x < 0) e (y < 0) entao
                       kind <- 3
                  senao
                       se(x = 0) e (y > 0) entao
                            kind <- 5
                       senao
                            se(x > 0) e (y = 0) entao
                                 kind <- 6
                            fimse
                       fimse
                  fimse
             fimse
        fimse
   fimse
   
   escolha(kind)
   caso 1
        escreval("QUADRANTE Q1")
   caso 2
        escreval("QUADRANTE Q2")
   caso 3
        escreval("QUADRANTE Q3")
   caso 4
        escreval("QUANDRANTE Q4")
   caso 5
        escreval("EIXO Y")
   caso 6
        escreval("EIXO X")
   fimescolha

   
ate (x = 0) ou (y = 0)



Fimalgoritmo